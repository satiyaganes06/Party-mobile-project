<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/silver"
tools:context=".DisplayParty">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/my_party_details_content_marginStartEnd"
                android:layout_marginTop="@dimen/my_party_details_content_marginTopBottom"
                android:layout_marginEnd="@dimen/my_party_details_content_marginStartEnd"
                android:paddingTop="@dimen/my_party_details_content_lbl_padding"
                android:paddingBottom="@dimen/my_party_details_content_lbl_padding"
                android:text="Party Details"
                android:textColor="@color/textColor"
                android:textSize="@dimen/my_party_details_lbl_textSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/my_party_details_content_paddingStartEnd"
                android:paddingTop="@dimen/my_party_details_content_paddingTopBottom"
                android:paddingEnd="@dimen/my_party_details_content_paddingStartEnd"
                android:paddingBottom="@dimen/my_party_details_content_paddingTopBottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Party Category"
                        android:textColor="@color/dark_silver"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />

                    <TextView
                        android:id="@+id/tv_party_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/my_party_details_label_value_textSize"
                        tools:text="Dinner Party" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Party Type"
                        android:textColor="@color/dark_silver"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/my_party_details_label_value_textSize"
                        tools:text="Private" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Party Date"
                        android:textColor="@color/dark_silver"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21/02/2023"
                        android:textAlignment="center"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Party Date"
                        android:textColor="@color/dark_silver"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:21 AM"
                        android:textAlignment="center"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Party Code"

                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="@dimen/lbl_party_details_textSize" />

                <LinearLayout
                    android:id="@+id/ll_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/dark_silver"
                    android:padding="@dimen/item_image_padding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_qr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="Location: "
                            android:textColor="@color/textColor"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textSize="14sp"
                            tools:text="XYZ" />

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textColor"
                            android:textSize="14sp"
                            tools:text="XYZ" />

                        <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textColor"
                            android:textSize="14sp"
                            tools:text="XYZ" />


                        <TextView
                            android:id="@+id/tv_telNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            tools:text="+64 123456789" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="yXpf"/>

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_list_marginTop"
                android:background="@color/silver"
                android:orientation="vertical"
                android:padding="@dimen/item_list_padding">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="9dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/item_list_padding"
                    app:cardBackgroundColor="@color/lightRed"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ll_item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@color/dark_silver"
                    android:padding="@dimen/item_image_padding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_party_image"
                        android:layout_width="@dimen/item_image_width"
                        android:layout_height="@dimen/item_image_height"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_image_title_price_marginStart"
                    android:gravity="top"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/cardView"
                    app:layout_constraintStart_toEndOf="@id/ll_item_image"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/rv_item_name_textSize"
                        android:textStyle="bold"
                        tools:text="Name" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/my_party_details_content_marginStartEnd"
                android:layout_marginTop="@dimen/my_party_details_content_marginTopBottom"
                android:layout_marginEnd="@dimen/my_party_details_content_marginStartEnd"
                android:layout_marginBottom="@dimen/my_party_details_content_marginTopBottom"
                android:paddingTop="@dimen/my_party_details_content_lbl_padding"
                android:paddingBottom="@dimen/my_party_details_content_lbl_padding"
                android:text="Party Address"
                android:textColor="@color/textColor"
                android:textSize="@dimen/my_party_details_lbl_textSize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/my_party_details_content_marginStartEnd"
                android:layout_marginTop="@dimen/my_party_details_content_marginTopBottom"
                android:layout_marginEnd="@dimen/my_party_details_content_marginStartEnd"
                android:layout_marginBottom="@dimen/my_party_details_content_marginTopBottom"
                android:paddingTop="@dimen/my_party_details_content_lbl_padding"
                android:paddingBottom="@dimen/my_party_details_content_lbl_padding"
                android:text="Total People"
                android:textColor="@color/textColor"
                android:textSize="@dimen/my_party_details_lbl_textSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/my_party_details_items_receipt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current Joined People"
                        android:textColor="@color/dark_silver"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />

                    <TextView
                        android:id="@+id/tv_current_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/my_party_details_label_value_textSize"
                        tools:text="$100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total People"
                        android:textColor="@color/dark_silver"
                        android:textSize="@dimen/my_party_details_label_value_textSize" />

                    <TextView
                        android:id="@+id/tv_total_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/my_party_details_label_value_textSize"
                        tools:text="$10.0" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_Update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/update"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people" />



        </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>

